<body>

    <h1>Gacha Roll</h1>
    <p>Click the button to draw a random item!</p>

    <button class="gacha-btn" onclick="gachaRoll()">Roll Gacha</button>

    <div class="result" id="result">Good luck!</div>

    <script>
        // Array of possible gacha items
        const items = [
            'Common Item 1', 
            'Common Item 2', 
            'Rare Item 1', 
            'Super Rare Item', 
            'Ultra Rare Item'
        ];

        // Gacha roll function
        function gachaRoll() {
            const randomIndex = Math.floor(Math.random() * items.length);
            const result = items[randomIndex];
            document.getElementById('result').textContent = `You got: ${result}!`;
        }
    </script>

